<h1>タスク一覧</h1>
<% if @tasklist.any? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasklist.each do |task| %>
        <tr>
          <td><%= link_to task.id,task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
  </div>
<% end %>
<%= paginate @tasklist %>

<%= link_to "新規タスクの追加",new_tasklist_path,class: "btn btn-primary" %>