<%= form_for(tasklists) do |f| %>
  <% if tasklists.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tasklists.errors.full_messages.each do |tasks| %>
          <li><%= tasklists %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
    <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.submit '追加' %>
<% end %>