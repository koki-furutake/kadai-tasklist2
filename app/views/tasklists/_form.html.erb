<%= form_for(tasklist) do |f| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% message.errors.full_messages.each do |tasks| %>
          <li><%= tasks %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '追加' %>
<% end %>